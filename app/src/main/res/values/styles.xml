<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:colorPrimary">@color/AppVoilet</item>
        <item name="android:colorPrimaryDark">@color/tabsScrollColor</item>


        <!--Support Library-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/AppVoilet</item>
        <item name="colorPrimaryDark">@color/tabsScrollColor</item>

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/AppVoilet</item>
        <item name="android:elevation">0dp</item>
        <!--Support Library-->
        <item name="elevation">0dp</item>
        <item name="background">@color/AppVoilet</item>
        <item name="backgroundStacked">@color/AppVoilet</item>


    </style>

    <style name="RobotoCondensed">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ListItemLabelFont">
        <item name="android:textColor">@color/list_item_label2</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
